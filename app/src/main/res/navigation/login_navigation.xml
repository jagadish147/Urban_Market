<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_login">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.jagadish.freshmart.view.login.ui.login.LoginFragment"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_navigation_login_to_navigation_login_details"
            app:destination="@id/navigation_login_details"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/action_navigation_login_to_navigation_mobile_verification"
            app:destination="@id/navigation_mobile_verification"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <argument
            android:name="requestOtpRes"
            app:argType="com.jagadish.freshmart.data.dto.login.RequestOtpRes" />
    </fragment>

    <fragment
        android:id="@+id/navigation_login_details"
        android:name="com.jagadish.freshmart.view.login.ui.details.LoginDetailsFragment"
        tools:layout="@layout/fragment_login_details" >
        <action
            android:id="@+id/action_navigation_login_details_to_navigation_mobile_verification"
            app:destination="@id/navigation_mobile_verification"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <argument
            android:name="requestOtpRes"
            app:argType="com.jagadish.freshmart.data.dto.login.RequestOtpRes" />
    </fragment>

    <fragment
        android:id="@+id/navigation_mobile_verification"
        android:name="com.jagadish.freshmart.view.login.ui.verification.MobileVerificationFragment"
        tools:layout="@layout/fragment_mobile_verification" >
        <argument
            android:name="requestOtpRes"
            app:argType="com.jagadish.freshmart.data.dto.login.RequestOtpRes" />
        <action
            android:id="@+id/action_navigation_mobile_verification_to_navigation_login_details"
            app:destination="@id/navigation_login_details"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>


</navigation>